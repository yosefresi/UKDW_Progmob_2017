<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="Find Question"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/btnSearch"
        android:layout_marginRight="49dp"
        app:layout_constraintRight_toRightOf="parent" />

    <QuickContactBadge
        android:id="@+id/imgFoto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_weight="0.42"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/txtNamaHome"
        android:layout_width="254dp"
        android:layout_height="29dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="37dp"
        android:text="Nama"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/imgFoto"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBankSoal"
        android:layout_width="140dp"
        android:layout_height="135dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="18dp"
        android:background="@mipmap/ic_bank"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNamaHome"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/btnTimeline"
        android:layout_width="140dp"
        android:layout_height="135dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="18dp"
        android:background="@mipmap/ic_newspaper"
        app:layout_constraintLeft_toRightOf="@+id/btnBankSoal"
        app:layout_constraintTop_toBottomOf="@+id/txtNamaHome"
        android:layout_marginStart="52dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="Friends"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginLeft="28dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/btnFriendList" />

    <Button
        android:id="@+id/btnFriendList"
        android:layout_width="140dp"
        android:layout_height="135dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="13dp"
        android:background="@mipmap/ic_friends"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="140dp"
        android:layout_height="135dp"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="13dp"
        android:background="@mipmap/ic_search"
        app:layout_constraintLeft_toRightOf="@+id/btnFriendList"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="Timeline"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/btnTimeline"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="72dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="Question Bank"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginLeft="28dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/btnBankSoal" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
